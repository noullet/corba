import static org.junit.Assert.*;

import org.junit.Test;


public class RomanTest {

	@Test
	public void convertUnTest() {
		assertEquals("I", Roman.convert(1));
	}
	
	@Test
	public void convertDeuxTest() {
		assertEquals("II", Roman.convert(2));
	}
	
	@Test
	public void convertQuatreTest() {
		assertEquals("IV", Roman.convert(4));
	}
	
	@Test
	public void convertCinqTest() {
		assertEquals("V", Roman.convert(5));		
	}
	@Test
	public void convertSixTest() {
		assertEquals("VI", Roman.convert(6));		
	}
	@Test
	public void convertSeptTest() {
		assertEquals("VII", Roman.convert(7));		
	}
	@Test
	public void convertNeufTest() {
		assertEquals("IX", Roman.convert(9));		
	}
	@Test
	public void convertVingtTest() {
		assertEquals("XX", Roman.convert(20));		
	}
	@Test
	public void convertQuaranteNeufTest() {
		assertEquals("XLIX", Roman.convert(49));		
	}
}

